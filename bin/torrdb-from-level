#!/usr/bin/env node
const client = require('../lib/elasticsearch.js')
const {index} = require('../lib/defaults.js')
const location = process.argv[2] || '/tmp/torrent-sniffer/leveldb-bak'

function bulk(buffer) {
  const body = buffer.reduce((body, torrent) => {
    body.push(
      {
        index: {
          _index: index,
          _type: 'torrent',
          _id: torrent.infoHash,
        }
      },
      {
        name:     torrent.name,
        magnet:   torrent.magnet,
        extnames: torrent.extnames
      }
    )
    return body
  }, [])
  return client.bulk({body})
}

const level = require('level');
const db = level(location);
let count = 0
let buffer = []
const batch = 1e3
//const batch = 10
const stream = db.createReadStream()
.on('data', async function(data) {
  const value = JSON.parse(data.value);
  //console.log(data.key, value.name);
  //console.log(value.magnet);
  buffer.push({
    infoHash: data.key,
    name: value.name,
    magnet: value.magnet,
    extnames: value.extnames
  })
  count++

  if (0 === count % batch) {
    stream.pause()
    const response = await bulk(buffer)
    console.log(`${response.items.length} documents saved`);
    buffer = []
    stream.resume()
  }
})
.on('error', (error) => {
  console.error(error.stack);
})
.on('close', () => {
  console.log('Stream closed')
})
.on('end', () => {
  console.log('--------')
  console.log('Stream ended')
  console.log(`${count} torrents found`);
})
